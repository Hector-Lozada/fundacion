---
import Layout from '../layouts/Layout.astro';
import Hero from "../components/Hero.astro";
import SectionContainer from "../components/SectionContainer.astro";
import ProfileCheck from '../components/icons/ProfileCheck.astro';
import AboutMe from '../components/AboutMe.astro';
import Carousel from '../components/Carousel.astro';
import Cash from '../components/icons/Cash.astro';
import Users from '../components/icons/Users.astro';
import Photo from '../components/icons/Photo.astro';
---

<Layout title="Transformando Vidas: Fundación Dios de pactos"
description="Es una">
	<main class="px-4">
		<SectionContainer id="inicio" class="py-1 md:py-36">
		<Hero>
			</slot>
		</Hero>
		</SectionContainer>
		<div class="space-y-24">
			<SectionContainer id="images">
				<h2
				  class="flex items-center mb-6 text-3xl font-semibold gap-x-8 text-black/80 dark:text-white"
				>
				  <Photo class="size-8" />
				  Imagenes
				</h2>
				<Carousel />
			</SectionContainer>
			<SectionContainer id="sobre-nosotros">
				<h2
				  class="flex items-center mb-6 text-3xl font-semibold gap-x-8 text-black/80 dark:text-white"
				>
				  <Users class="size-8" />
				  Sobre la fundación
				</h2>
				<AboutMe />
			  </SectionContainer>
			  <SectionContainer id="donacion">
				<h2
				  class="flex items-center mb-6 text-3xl font-semibold gap-x-8 text-black/80 dark:text-white"
				>
				  <Cash class="size-8" />
				  Donaciones
				</h2>
				<script src="https://donorbox.org/widget.js" paypalExpress="false"></script><iframe src="https://donorbox.org/embed/prueba3-1?default_interval=o&hide_donation_meter=true" name="donorbox" allowpaymentrequest="allowpaymentrequest" seamless="seamless" frameborder="0" scrolling="no" height="900px" width="100%" style="max-width: justify-content: center; 500px; min-width: 250px; max-height:none!important" allow="payment"></iframe>
			  </SectionContainer>
		</div>
	</main>
</Layout>